<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dpv="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="70dp"
    android:layout_marginBottom="50dp"
    android:gravity="center"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    android:transitionName="back"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="6sp"

    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="40dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="0dp"
        android:weightSum="10">

        <TextView
            android:layout_weight="3"
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:text="Version XXX"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingTop="7dp"
            android:text="@string/whats_new"
            android:textColor="@color/accent"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_weight="1"
            android:id="@+id/changelog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:text="Changelog goes here take a few lines \n second feature goes here wow bitch\n New ui an stsuff like this \n some more... goes here \n hey let's get this party started \n just writing a few more lines"
            android:textSize="15sp" />


        <com.panwrona.downloadprogressbar.library.DownloadProgressBar
            android:id="@+id/download"
            android:layout_width="70dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            dpv:circleBackgroundColor="@color/colorPrimary"
            dpv:progressBackgroundColor="@android:color/darker_gray"
            dpv:progressColor="@color/colorPrimary"
            dpv:drawingColor="@color/colorPrimary"
            dpv:progressDuration="2000"
            dpv:resultDuration="5000"
            android:layout_weight="8"
            dpv:circleRadius="24dp"
            dpv:lineWidth="3dp"
            dpv:strokeWidth="3dp"
            dpv:overshootValue="2.5"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>
